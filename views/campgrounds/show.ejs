<%- include("../partials/header") %>

<div class="container pt-4">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        <div class="col-md-9">            
            <div class="card mb-4">
                <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                <div class="card-body">
                  <h4 class="float-right">$9.00/night</h4>
                  <h4 class="card-title"><a href="#"><%= campground.name %></a></h4>
                  <p class="card-text"><%= campground.description %></p>               
                </div>
            </div>
            <div class="card bg-light">                              
                <div class="card-body">
                    <div class="text-right">
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>    
                    </div> 
                    <hr>
                    <% campground.comments.forEach(comment => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author %></strong>
                                <span class="float-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>                        
                    <% }); %>
                </div>
            </div>   
        </div>
    </div> 
</div>









<%- include("../partials/footer") %>