<%- include("../partials/header") %>

<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Welcome to YelpCamp!</h1>
      <p class="lead">
        View our hand-picked campgrounds from all over the world
      </p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds!</h3>
    </div>
  </div>

  <div class="row">
    <% campgrounds.forEach(campground => { %>
    <div class="col-lg-3 pb-3">
      <div class="card">
        <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
        <div class="card-body text-center">
          <h5 class="card-title"><%= campground.name %></h5>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
        </div>
      </div>
    </div>

    <% }); %>
  </div>
</div>

<%- include("../partials/footer") %>